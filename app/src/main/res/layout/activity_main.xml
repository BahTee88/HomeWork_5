<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/image">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_Register"
        android:layout_marginTop="34dp"/>

    <TextView
        android:id="@+id/tv_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textSize="32sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp"/>

    <EditText
        android:id="@+id/us_name"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:hint="@string/user_name_trivia"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Register"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        android:paddingStart="12dp"
        android:background="@drawable/edittext"
        android:backgroundTint="@color/n_color"/>

    <EditText
        android:id="@+id/e_name"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:hint="@string/email"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/us_name"
        android:layout_marginTop="16dp"
        android:paddingStart="12dp"
        android:background="@drawable/edittext"
        android:backgroundTint="@color/n_color"/>

    <EditText
        android:id="@+id/p_word"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:hint="@string/password"
        android:textColorHint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/e_name"
        android:layout_marginTop="20dp"
        android:paddingStart="12dp"
        android:backgroundTint="@color/n_color"
        android:background="@drawable/edittext"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textSize="20sp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/p_word"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableEnd="@drawable/ic_right"/>

    <ImageView
        android:id="@+id/ow_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/owl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trivia"
        android:textSize="50sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ow_image"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>